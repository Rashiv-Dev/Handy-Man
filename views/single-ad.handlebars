<div class="company">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{company.title}}</h2>
      <div>
        Posted by {{company.User.username}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{company.body}}
    </div>
  </article>

  {{#if company.Ad}}
    <section class="card">
      <div class="card-header">
        <h3>Ad</h3>
      </div>

      <div class="card-body">
        {{#each company.Ad}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-ad-form" class="card">
    <div class="card-header">
      <h3>New Ad</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="company-id" value="{{company.id}}" />

      <label class="form-label" for="ad-body">Ad</label>

      <textarea name="ad-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/ad.js"></script>