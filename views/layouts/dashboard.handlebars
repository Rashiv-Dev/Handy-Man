<section>
  <h2>Post Your Service</h2>

  <form class="new-company-form">
    <div>
      <label for="company-title">Title</label>
      <input type="text" id="company-title" name="company-title" />
    </div>
    <div>
      <label for="company-url">Link</label>
      <input id="company-url" name="company-url" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if companies.length}}
<section>
  <h2>Your companys</h2>
  <ol>
    {{#each companys as |company|}}
    <li>
      {{> company-info company}}
      <a href="/dashboard/edit/{{company.id}}" class="edit-link">Edit company</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-company.js"></script>


